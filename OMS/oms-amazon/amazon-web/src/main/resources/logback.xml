<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="UTF-8">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender> 
    
    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Encoding>UTF-8</Encoding>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/acorn/data/oms/amazon_logs/amazon.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.chinadrtv.amazon">
        <level value="INFO" />
    </logger>
    
    <logger name="com.chinadrtv.service.oms.impl">
        <level value="INFO" />
    </logger>
    
    <logger name="com.chinadrtv.dal.iagent.dao">
    	<level value="TRACE"/>
    </logger>
    
    <logger name="com.chinadrtv.dal.oms.dao">
    	<level value="TRACE"/>
    </logger>
    
    <root>
        <level value="ERROR" />
        <appender-ref ref="stdout"/>
        <appender-ref ref="rollingFile" />
    </root>
</configuration>
